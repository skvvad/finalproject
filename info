<script>
    // Language Switching
    $('#lang-en').click(function(){
        $('[data-lang="en"]').show();
        $('[data-lang="kz"]').hide();
        $('#lang-en').hide();
        $('#lang-kz').show();
    });

    $('#lang-kz').click(function(){
        $('[data-lang="en"]').hide();
        $('[data-lang="kz"]').show();
        $('#lang-en').show();
        $('#lang-kz').hide();
    });
</script>
